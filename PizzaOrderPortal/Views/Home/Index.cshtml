@{
    ViewBag.Title = "Home Page";
}
<style>
    main{
        color:darkorange;
    }
</style>

<main>
    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome to Pizza Portal!</h1>
        <p class="lead">Explore our wide range of delicious pizzas and place your order online for pickup or delivery.</p>
        <hr class="my-4">
        <p>To get started, browse our Pizza menu and place your order now!</p>
    </div>

    <div class="container">
        <section class="row" aria-labelledby="pizzaTitle">
            <h2 id="pizzaTitle" class="text-center">Featured Pizzas</h2>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Supreme Pizza</h3>
                        <p class="card-text">A classic combination of pepperoni, sausage, bell peppers, onions, olives, and mushrooms.</p>
                    
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Hawaiian Pizza</h3>
                        <p class="card-text">A tropical delight with ham, pineapple, and mozzarella cheese.</p>
                       
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Vegetarian Pizza</h3>
                        <p class="card-text">Freshly diced tomatoes, bell peppers, onions, olives, and mushrooms, topped with mozzarella cheese.</p>
                      
                    </div>
                </div>
            </div>
        </section>

        <section class="row" aria-labelledby="specialOffersTitle">
            <h2 id="specialOffersTitle" class="text-center">Special Offers</h2>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Family Combo Deal</h3>
                        <p class="card-text">Get 2 large pizzas, 1 side, and a 2-liter drink for only Rs.499.49!</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Student Discount</h3>
                        <p class="card-text">Show your student ID and get 15% off on your entire order!</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="row" aria-labelledby="blogsTitle">
            <h2 id="blogsTitle" class="text-center">Latest Blogs</h2>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Discovering the Art of Pizza Making</h3>
                        <p class="card-text">Learn about the history and techniques behind crafting the perfect pizza.</p>
   
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">The Health Benefits of Pizza</h3>
                        <p class="card-text">Explore surprising health benefits associated with certain pizza ingredients.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Top Pizza Topping Trends of the Year</h3>
                        <p class="card-text">Stay up-to-date with the latest trends in pizza toppings around the world.</p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
